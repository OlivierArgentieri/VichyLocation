{% extends 'base_admin.html.twig' %}

{% block page_wrapper %}
    <h1> </h1>
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th>Id</th>
            <th>UserName</th>
            <th>Mail</th>
            <th>Activer</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.enabled }}</td>
                <td>
                    <ul>
                        {% for role in user.roles %}
                            <li> {{ role }} </li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin-panel_user_edit', { 'id': user.id }) }}" class="btn btn-warning"><i class="fa fa-edit"></i>Modifier</a>
                            <a href="" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal"> <i class="fa fa-trash"></i>Supprimer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>


    <!-- Delete Modal-->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">Voulez vous vraiment supprimer cet utilisateurs ? </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Annuler</button>
                    <a class="btn btn-primary" href="{{ path('admin-panel_user_delete', { 'id': user.id }) }}">Oui</a>
                </div>
            </div>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('admin-panel_user_index') }}" class="btn btn-dark"><i class="fa fa-backward"></i> Retour vers la liste </a>
        </li>

    </ul>
{% endblock page_wrapper %}

     {% block javascripts %}

         <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"></script>
         <script src="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css"></script>
         <script> $(document).ready(function() {
                 $('#example').DataTable();
             } );
         </script>
     {% endblock javascripts %}