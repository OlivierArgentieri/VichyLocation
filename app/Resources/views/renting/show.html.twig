{% extends 'base_admin.html.twig' %}

{% block page_wrapper %}
    <h1>Locations</h1>


    <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">

                    <div class="col-sm-12 text-right mb-3">
                        <a href="{{ path('admin-panel_renting_new') }}" class="btn btn-success" ><i class="material-icons">&#xE147;</i> <span>Ajouter une Location</span></a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Date de Début</th>
                    <th>Date de Fin</th>
                    <th>Appartement</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ renting.id }}</td>
                    <td>{{ renting.begginDate|date('d-m-Y') }}</td>
                    <td>{{ renting.endDate|date('d-m-Y') }}</td>
                    <td>{{ renting.flat}}</td>
                    <td>
                        <a class="btn btn-warning" href="{{ path('admin-panel_renting_edit', { 'id': renting.id }) }}"><i class="fa fa-edit"></i> Modifier</a>
                        <a class="btn btn-danger" href="" data-target="#deleteModal" data-toggle="modal"><i class="fa fa-trash"></i> Supprimer</a>
                    </td>
                </tr>

                </tbody>
            </table>
        </div>
    </div>
    <!-- Delete Modal-->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Voulez vous vraiment supprimer cette location ? </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Annuler</button>
                    {{ form_start(delete_form) }}
                    <input class="btn btn-primary" type="submit" value="Oui">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-right">
            <a href="{{ path('admin-panel_renting_index') }}" class="btn btn-dark"><i class="fa fa-backward"></i> Retour vers la liste </a>
        </div>
    </div>
{% endblock page_wrapper%}
