{% extends 'base_admin.html.twig' %}
{% block stylesheets %}

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/css/bootstrap-datepicker.css">
{% endblock %}
{% block page_wrapper %}
    <div class="col-md-12">
        <h1>User creation</h1>

        {{ form_start(form) }}
        {% for error in form.vars.errors.form.getErrors(true) %}
            <div class="alert-danger"><i class="fa fa-exclamation-triangle"></i> {{ error.message}}</div>
        {% endfor %}
        <table id="AddUser" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
            <tr>
                <th>BegginDate</th>
                <th>EndDate</th>
                <th>Flat</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ form_widget(form.begginDate) }}</td>
                <td>{{ form_widget(form.endDate) }}</td>
                <td>{{ form_widget(form.flat) }}</td>
                <td>
                    {{ form_rest(form) }}
                    <input type="submit" class="btn btn-success " value="Ajouter" />

                    <a href="{{ path('admin-panel_flat_new') }}" class="btn btn-secondary"><i class="fa fa-crosshairs"></i> Ajouter un appartement </a>
            </tr>
            </tbody>
        </table>

        {{ form_end(form) }}

        <div class="row">
            <div class="col-md-12 text-right">
                <a href="{{ path('admin-panel_renting_index') }}" class="btn btn-dark"><i class="fa fa-backward"></i> Retour vers la liste </a>
            </div>
        </div>
    </div>

{% endblock page_wrapper %}
{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/js/bootstrap-datepicker.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/locales/bootstrap-datepicker.fr.min.js"></script>
<script>
    $('.datepicker').datepicker({
        format: "yyyy-mm-dd",
        language: "fr"
    });
</script>
{% endblock javascripts %}