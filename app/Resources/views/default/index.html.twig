                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#Contact">Contact</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>






    <!-- caroussel header -->
    <header>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <!-- Slide One - Set the background image for this slide in the line below -->
                <div class="carousel-item active img-wrapper-1900x1080" style="background-image: url('https://www.ville-vichy.fr/uploads/media/contenu/0001/01/thumb_152_contenu_big.jpeg')">

                </div>
                <!-- Slide Two - Set the background image for this slide in the line below -->

                <div class="carousel-item img-wrapper-1900x1080" style="background-image:url('https://i.ytimg.com/vi/tvxIvHyZO_M/maxresdefault.jpg')">

                </div>

                <!-- Slide Three - Set the background image for this slide in the line below -->
                <div class="carousel-item img-wrapper-1900x1080" style="background-image: url('http://www.vichy-thermes-domes-hotel.fr/sites/all/files/imagecache/full_colonne/VICHY-THERMES-DOMES-HOTEL-exposition-source-des-Celestins-1.jpg')">

                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </header>


    <!-- Page Content -->
    <section class="bg-info      text-white" id="About">
        <div class="container">
            <div class="row">
                <div class=" mx-auto text-center">
                    <h2 class="section-heading text-white mt-5 mb-2">
                        <strong> Description :</strong>
                    </h2>
                </div>
            </div>
            <div class="row">
                <div class=" mx-auto text-center mb-5">
                    <h5>Location d'appartement entiérement remis á neuf, situé à coté de l'école d'infirmier </h5>
                </div>
            </div>
        </div>
    </section>
    <!-- /.container -->

    <section class="bg-white text-dark" id="Appartements">
        <div class="container">
            <div class="row">
                <div class=" mx-auto text-center">
                    <h2 class="section-heading text-dark mt-5 mb-2">
                        <strong>Nos appartement :</strong>
                    </h2>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                {% for flat in flats %}
                    <div class="col-sm-4 my-4">
                        <div class="card w-100 mb-5">
                            <div id="Carousel-{{ flat.getId() }}" class="carousel slide" data-ride="carousel" data-wrap="false" data-interval="3000">
                                <div class="carousel-inner" role="listbox">
                                    {% if (flat.images()|length > 0) %}
                                        {% for i in 0..flat.images()|length-1 %}
                                            {% if (i== 0) %}
                                                <div class="carousel-item active">
                                                    <div class="img-wrapper-300-200">
                                                        <img class="d-block w-100 img-fluid img-fixed"
                                                             src="{{ asset("uploads/images/") }}{{ flat.getName() }}/{{ flat.images()[i].getName() }}"
                                                             alt="First slide">
                                                    </div>
                                                </div>
                                            {% else %}
                                                <div class="carousel-item">
                                                    <div class="img-wrapper-300-200">
                                                        <img class="d-block w-100 img-fluid img-fixed"
                                                             src="{{ asset("uploads/images/") }}{{ flat.getName() }}/{{ flat.images()[i].getName() }}"
                                                             alt="First slide">
                                                    </div>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    {% else %}
                                        <div class="carousel-item active">
                                            <div class="img-wrapper-300-200">
                                                <img class="d-block w-100 img-fluid img-fixed"
                                                     src="http://placehold.it/300x200"
                                                     alt="First slide">
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                                <a class="carousel-control-prev" id="carousel-prev-{{ flat.getId() }}" role="button"
                                   data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" id="carousel-next-{{ flat.getId() }}" role="button"
                                   data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                            <div class="card-body">
                                <h4 class="card-title">Description</h4>
                                <p class="card-text"> {{ flat.getDescription() }}</p>
                            </div>
                            <div class="card-footer">
                                <a href="#" class="btn btn-primary">En savoir plus !</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>



<section class="bg-secondary text-white" id="Contact">
