    <!-- caroussel header -->
    <header>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <!-- Slide One - Set the background image for this slide in the line below -->
                <div class="carousel-item active">
                    <div class="img-wrapper-1900-1080">
                        <img class="d-block w-100 img-fluid img-fixed"
                             src="{{ asset("uploads/images/Remi/Remi_ScreenShot_17-12-28_03-59-16-000.jpg") }}"
                             alt="First slide">
                    </div>
                </div>
                <!-- Slide Two - Set the background image for this slide in the line below -->
                <div class="carousel-item">
                    <div class="img-wrapper-1900-1080">
                        <img class="d-block w-100 img-fluid img-fixed"
                             src="{{ asset("uploads/images/Remi/Remi_ScreenShot_17-12-28_03-59-17-000.jpg") }}"
                             alt="First slide">
                    </div>
                </div>
                <!-- Slide Three - Set the background image for this slide in the line below -->
                    <div class="carousel-item">
                        <div class="img-wrapper-1900-1080">
                            <img class="d-block w-100 img-fluid img-fixed"
                                 src="http://placehold.it/1900x1080"
                                 alt="First slide">
                        </div>
                    </div>

                    <div class="carousel-caption d-none d-md-block">
                        <h3>Third Slide</h3>
                        <p>This is a description for the third slide.</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>

    </header>


    <section class="bg-dark text-white" id="about">
        <div class="container">
            <div class="row">
                {% for flat in flats %}
                    <div class="col-sm-4 my-4">
                        <div class="card w-100">
                            <div id="Carousel-{{ flat.getId() }}" class="carousel slide" data-ride="carousel">

                                <div class="carousel-inner" role="listbox">
                                    {% if (flat.images()|length > 0) %}
                                        {% for i in 0..flat.images()|length-1 %}
                                            {% if (i== 0) %}
                                                <div class="carousel-item active">
                                                    <div class="img-wrapper-300-200">
                                                        <img class="d-block w-100 img-fluid img-fixed"
                                                             src="{{ asset("uploads/images/") }}{{ flat.getName() }}/{{ flat.images()[i].getName() }}"
                                                             alt="First slide">
                                                    </div>
                                                </div>
                                            {% else %}
                                                <div class="carousel-item">
                                                    <div class="img-wrapper-300-200">
                                                        <img class="d-block w-100 img-fluid img-fixed"
                                                             src="{{ asset("uploads/images/") }}{{ flat.getName() }}/{{ flat.images()[i].getName() }}"
                                                             alt="First slide">
                                                    </div>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    {% else %}
                                        <div class="carousel-item active">
                                            <div class="img-wrapper-300-200">
                                                <img class="d-block w-100 img-fluid img-fixed"
                                                     src="http://placehold.it/300x200"
                                                     alt="First slide">
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                                <a class="carousel-control-prev" id="carousel-prev-{{ flat.getId() }}" role="button"
                                   data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" id="carousel-next-{{ flat.getId() }}" role="button"
                                   data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                            <div class="card-body">
                                <h4 class="card-title">Description</h4>
                                <p class="card-text"> {{ flat.getDescription() }}</p>
                            </div>
                            <div class="card-footer">
                                <a href="#" class="btn btn-primary">En savoir plus !</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>













